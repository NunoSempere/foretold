{
  "name": "@foretold/server",
  "version": "1.0.0",
  "description": "Foretold Server",
  "author": "Ozzie Gooen <ozzieagooen@gmail.com>",
  "license": "MIT",
  "main": "src/index.js",
  "private": false,
  "engines": {
    "node": "12.6.0",
    "yarn": ">=1.16.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:production": "DATABASE_URL=postgres://ozziegooen@127.0.0.1:5432/predictions NODE_ENV=production yarn dev",
    "thing": "nodemon src/bots/primary.js",
    "resolutions": "nodemon src/bots/resolution.js",
    "inspect": "nodemon --inspect src/index.js",
    "test": "jest --watch",
    "test:cv": "jest --coverage --forceExit",
    "test:ci": "jest --forceExit",
    "lint": "eslint src --max-warnings 247",
    "lint:ci": "eslint src --max-warnings 247 --quiet",
    "lint-table": "eslint src --format table",
    "lint:cf": "eslint src --format codeframe",
    "lint-fix": "eslint src --fix",
    "serve": "node ./src/index.js",
    "db:create": "sequelize db:create",
    "db:drop": "sequelize db:drop",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:seed": "sequelize db:seed:all",
    "db:reset": "yarn db:drop; yarn db:create; yarn db:migrate"
  },
  "keywords": [
    "foretold",
    "predictions",
    "cdf"
  ],
  "dependencies": {
    "lodash": "4.17.15",
    "@slack/client": "5.0.2",
    "@foretold/cdf": "1.0.14",
    "@foretold/measurement-value": "1.0.0",
    "@foretold/prediction-analysis": "0.0.7",
    "bs-ken": "0.0.6",
    "apollo-server": "2.9.16",
    "apollo-server-express": "2.9.16",
    "auth0": "2.21.0",
    "body-parser": "1.19.0",
    "body-parser-graphql": "1.1.0",
    "change-case": "4.1.1",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-graphql": "0.9.0",
    "graphql": "14.5.8",
    "graphql-client": "2.0.1",
    "graphql-middleware": "4.0.2",
    "graphql-relay": "0.6.0",
    "graphql-sequelize": "9.4.0",
    "graphql-shield": "7.0.7",
    "graphql-type-json": "0.3.1",
    "graphql-input-number": "0.0.10",
    "jsonwebtoken": "8.5.1",
    "moment": "2.24.0",
    "mustache": "4.0.0",
    "node-fetch": "2.6.0",
    "node-schedule": "1.3.2",
    "nodemailer": "6.4.2",
    "pg": "7.17.1",
    "sequelize": "5.21.3",
    "request": "2.88.0",
    "request-promise": "4.2.5",
    "sequelize-cli": "5.5.1",
    "bunyan": "1.8.12",
    "bunyan-prettystream": "0.1.3",
    "bunyan-buddy": "1.6.0",
    "graphql-rate-limit": "2.0.1",
    "graphql-depth-limit": "1.1.0"
  },
  "devDependencies": {
    "@types/node": "12.7.8",
    "@types/lodash": "4.14.139",
    "@types/express": "4.17.1",
    "@types/nodemailer": "6.2.1",
    "@types/moment": "2.13.0",
    "@types/sequelize": "4.28.4",
    "eslint": "6.8.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-only-warn": "1.0.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.18.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "23.6.0",
    "eslint-watch": "6.0.1",
    "graphql_ppx": "0.2.8",
    "jest": "25.1.0",
    "nodemon": "2.0.2",
    "supertest": "4.0.2"
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "jest",
      "only-warn",
      "filenames"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "airbnb"
    ],
    "rules": {
      "no-continue": 0,
      "class-methods-use-this": 0,
      "no-extra-boolean-cast": 0,
      "object-curly-newline": 0,
      "no-console": 0,
      "arrow-body-style": 0,
      "no-await-in-loop": 0,
      "no-underscore-dangle": 0,
      "prefer-destructuring": 0,
      "filenames/match-exported": [2, "kebab"],
      "no-unused-vars": ["error", {
        "argsIgnorePattern": "^_"
      }],
      "no-plusplus": ["error", {
        "allowForLoopAfterthoughts": true
      }],
      "max-len": ["error", {
        "code": 80
      }],
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/manuals/"
    ],
    "setupFiles": [
      "./src/jest-globals.js"
    ]
  }
}
