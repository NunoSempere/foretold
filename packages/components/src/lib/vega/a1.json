{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 200,
  "padding": 5,
  "data": [
    {
      "name": "facet",
      "values": [
        {"year": "2021", "p5": 2, "p95": 3, "p50": 2.5},
        {"year": "2022", "p5": 3, "p95": 5, "p50": 4},
        {"year": "2023", "p5": 7, "p95": 8, "p50": 7.5},
        {"year": "2023", "p5": 2, "p95": 3, "p50": 2.5},
        {"year": "2024", "p5": 3, "p95": 50, "p50": 40},
        {"year": "2025", "p5": 2, "p95": 3, "p50": 2.5}
      ],
      "format": {"type": "json", "parse": {"year": "date:'%Y'"}}
    },
    {
      "name": "table",
      "source": "facet",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["year"],
          "ops": ["mean", "mean", "mean"],
          "fields": ["p5", "p95", "p50"],
          "as": ["p5", "p95", "p50"]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "time",
      "nice": "year",
      "domain": {"data": "facet", "field": "year"},
      "range": "width"
    },
    {
      "name": "yscale",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "facet", "field": "p95"}
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "format": "%Y",
      "grid": true,
      "title": "Barley Yield",
      "encode": {
        "grid": {"enter": {"stroke": {"value": "#ccc"}}},
        "ticks": {"enter": {"stroke": {"value": "#ccc"}}}
      }
    },
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Percentiles",
      "grid": true,
      "domain": false,
      "tickSize": 12,
      "encode": {
        "grid": {"enter": {"stroke": {"value": "#ccc"}}},
        "ticks": {"enter": {"stroke": {"value": "#ccc"}}}
      }
    }
  ],
  "marks": [
    {
      "type": "area",
      "from": {"data": "table"},
      "encode": {
        "enter": {"fill": {"value": "#C9D6E5"}},
        "update": {
          "interpolate": {"value": "monotone"},
          "x": {"scale": "xscale", "field": "year"},
          "y": {"scale": "yscale", "field": "p5"},
          "y2": {"scale": "yscale", "field": "p95"},
          "opacity": {"value": 0.75}
        },
        "hover": {"opacity": {"value": 0.5}}
      }
    },
    {
      "type": "line",
      "from": {"data": "table"},
      "encode": {
        "update": {
          "interpolate": {"value": "monotone"},
          "stroke": {"value": "#4C78A8"},
          "strokeWidth": {"value": 2},
          "opacity": {"value": 0.8}
        },
        "hover": {"opacity": {"value": 0.5}},
        "enter": {
          "x": {"scale": "xscale", "field": "year"},
          "y": {"scale": "yscale", "field": "p50"}
        }
      }
    }
  ]
}